<Window x:Class="pets.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pets"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="20 8 20 8" />
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="30" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="79*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid AutoGenerateColumns="False" x:Name="animalsGrid">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding name}" Header="Name" Width="120"/>
                <DataGridTextColumn Binding="{Binding age}" Header="Age" Width="80"/>
                <DataGridTextColumn Binding="{Binding sex}" Header="Sex" Width="80"/>
                <DataGridTextColumn Binding="{Binding breed}" Header="Breed" Width="120"/>
                <DataGridTextColumn Binding="{Binding description}" Header="Description" Width="350"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel HorizontalAlignment="Center"  Grid.Row="1" Orientation="Horizontal" Margin="256,0,175,0" Width="280">
            
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="pets.PetForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pets"
        mc:Ignorable="d"
        Title="PetForm" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label>Name</Label>
            <TextBox Grid.Row="1" Name="Name" Margin="5"/>
            <Label>Age</Label>
            <TextBox Grid.Row="2" Name="Age" Margin="5"/>
            <Label>Size</Label>
            <TextBox Grid.Row="3" Name="Size" Margin="5"/>
            <Label>Sex</Label>
            <TextBox Grid.Row="3" Name="Sex" Margin="5"/>
            <Label>Breed</Label>
            <TextBox Grid.Row="4" Name="Breed" Margin="5"/>
            <Label>Type</Label>
            <TextBox Grid.Row="5" Name="Type" Margin="5"/>
            <Label>Description</Label>
            <TextBox Grid.Row="5" Name="Description" Margin="5"/>
            <Button Grid.Row="6" Content="Add Pet" Margin="5" Click="AddPet"/>
        </StackPanel>
    </Grid>
</Window>
